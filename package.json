{
  "name": "@pojntfx/webnetesctl",
  "version": "0.0.1",
  "description": "Like kubectl, but for webnetes. Runs in the browser and in node.",
  "source": "index.ts",
  "main": "dist/nodeLib/index.js",
  "module": "dist/webLib/index.js",
  "types": "dist/index.d.ts",
  "binSource": "app/webnetesctl_node/main.ts",
  "binMain": "dist/nodeApp/main.js",
  "scripts": {
    "build": "rm -rf dist && yarn build:lib && yarn build:app:node && yarn build:app:web && yarn build:docs",
    "build:lib": "rollup -c",
    "build:app:node": "rollup -c && chmod +x dist/nodeApp/main.js",
    "build:app:web": "next build && next export -o dist/webApp",
    "build:diagram": "mkdir -p dist/media && tplant -p tsconfig.json -i 'lib/**/*.ts*' --output 'dist/media/diagram.svg'",
    "build:docs": "mkdir -p dist/docs && typedoc --tsconfig tsconfig.json --mode file --outDir dist/docs --out dist/docs --media dist/media --exclude '+(node_modules|dist|rollup.config.js|app)' .",
    "test": "jest || exit 0",
    "test:update": "jest --updateSnapshot || exit 0",
    "dev:tests": "jest ---watchAll",
    "dev:lib": "rollup -c -w",
    "dev:app:node": "LOG_LEVEL=debug DEBUG='' ts-node-dev --files app/webnetes_node/main.ts",
    "dev:app:web": "next dev",
    "start:app:node": "./dist/nodeApp/main.js",
    "start:app:web": "next start",
    "start:app:web:exported": "serve dist/webApp",
    "start:docs": "serve dist/docs"
  },
  "bin": {
    "webnetesctl": "dist/nodeApp/main.js"
  },
  "files": [
    "dist/nodeApp",
    "dist/nodeLib",
    "dist/webLib",
    "dist/index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pojntfx/webnetesctl.git"
  },
  "author": "Felicitas Pojtinger <felicitas@pojtinger.com>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/pojntfx/webnetesctl/issues"
  },
  "homepage": "https://github.com/pojntfx/webnetesctl#readme",
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@types/jest": "^26.0.16",
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.0",
    "@types/styled-components": "^5.1.7",
    "@types/yargs": "^15.0.12",
    "@zeit/next-less": "^1.0.1",
    "@zeit/next-sass": "^1.0.1",
    "babel-plugin-import": "^1.13.3",
    "esbuild": "^0.8.20",
    "jest": "^26.6.3",
    "less": "^3.12.2",
    "next-compose-plugins": "^2.2.1",
    "next-transpile-modules": "^6.0.0",
    "rollup": "^2.34.2",
    "rollup-plugin-dts": "^2.0.0",
    "rollup-plugin-esbuild": "^2.6.0",
    "rollup-plugin-hashbang": "^2.2.2",
    "serve": "^11.3.2",
    "tplant": "^2.3.6",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.0.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@monaco-editor/react": "^3.7.4",
    "@pojntfx/webnetes": "^0.0.5",
    "antd": "^4.9.4",
    "babel-plugin-styled-components": "^1.12.0",
    "i18next": "^19.8.4",
    "monaco-editor": "^0.21.2",
    "next": "^10.0.4",
    "next-images": "^1.6.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-globe.gl": "^2.13.0",
    "react-i18next": "^11.8.4",
    "styled-components": "^5.2.1",
    "three-globe": "^2.11.1",
    "xterm-for-react": "^1.0.4",
    "yargs": "^16.2.0"
  },
  "jest": {
    "rootDir": "lib",
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/**/*.test.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  }
}
